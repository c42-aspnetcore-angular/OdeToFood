@page "{id}"
@using OdeToFood.Pages.Restaurants

@model EditModel

<h1>Edit @Model.Restaurant</h1>
<form method="post">
    <div>
        <label asp-for="@Model.Restaurant.Name"></label>
        <input asp-for="@Model.Restaurant.Name">
        <span asp-validation-for="@Model.Restaurant.Name"></span>
    </div>

    <div>
        <label asp-for="@Model.Restaurant.Cuisine"></label>
        <select asp-for="@Model.Restaurant.Cuisine"
                asp-items="@Html.GetEnumSelectList<CuisineType>()"></select>
        <span asp-validation-for="@Model.Restaurant.Cuisine"></span>
    </div>

    <input type="submit" name="save" value="Save" />
</form>